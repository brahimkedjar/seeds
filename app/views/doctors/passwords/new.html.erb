<style>
  .password-reset {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f8f8f8;
    border: 1px solid #ccc;
    border-radius: 4px;
    text-align: center;
  }

  .password-reset h2 {
    margin-bottom: 20px;
    font-size: 24px;
  }

  .form-field {
    margin-bottom: 20px;
    text-align: left;
  }

  .form-label {
    display: block;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .form-actions {
    text-align: center;
  }

  .button-primary {
    padding: 10px 20px;
    font-size: 16px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .button-primary:hover {
    background-color: #0056b3;
  }
</style>

<div class="password-reset">
  <h2>Mot de passe oubli√© ?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "doctors/shared/error_messages", resource: resource %>

    <div class="form-field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Envoyer", class: "button-primary" %>
    </div>
  <% end %>

  <%= render "doctors/shared/links" %>
</div>
